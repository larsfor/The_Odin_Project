<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://www.attendit.net/images/easyblog_shared/July_2018/7-4-18/totw_network_profile_400.jpg" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= @user.name %></p>
        <p class="subtitle is-6"><%= @user.email %></p>
      </div>
      </div>
        <div class="media-content">
          <% if current_user != @user %>
            <% unless current_user.friends.include?(@user) %>
              <%= link_to "Send a friend request", send_request_friend_request_path, class: 'button is-link' %>
            <% end %>
          <% end %>
        </div>
      </div>
    <hr>
    <div class="content">
      <%= "Hi my name is #{@user.name}, do you want to be my friend?"%>
    </div>
  </div>
</div>