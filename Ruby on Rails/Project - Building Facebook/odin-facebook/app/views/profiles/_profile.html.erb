<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://www.attendit.net/images/easyblog_shared/July_2018/7-4-18/totw_network_profile_400.jpg" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= @user.name %></p>
        <p class="subtitle is-6"><%= @user.email %></p>
      </div>
    </div>
      <div class="media-content">
        <% if current_user != @user %>
          <% unless current_user.friends.include?(@user) %>
            <button class="button is-success is-light">Send a friend request</button>  
          <% end %>
        <% end %>
      </div>

    <hr>

    <div class="content">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      Phasellus nec iaculis mauris. 
      <br>
      <time datetime="2022-1-1">11:09 PM - 1 Jan 2022</time>
    </div>
  </div>
</div>